<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PhoneTrackerLocation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="title_app">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/_26sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAppCompatButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_gradient</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="mess_intro">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_toolbar">
        <item name="android:background">@drawable/bg_btn_toolbar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="mlayout_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_18sdp</item>
        <item name="android:background">@drawable/bg_border_shadow</item>
        <item name="android:backgroundTint">@color/shadow</item>
    </style>

    <style name="mContent_account">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/bg_border</item>

    </style>

    <style name="edt_otp">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="Theme.PhoneTrackerLocation" parent="Base.Theme.PhoneTrackerLocation" />


</resources>