<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyCardOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="layout_constraintWidth_percent">0.3</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ChildCardOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">5dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
    </style>

    <style name="ImageInCardOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="ItemNav">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="iconGravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconSize">@dimen/icon_button_size</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/color_text</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

</resources>