<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_gravity="top"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="150dp"
             app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:id="@+id/mRcy"
                android:paddingTop="80dp"
                android:paddingEnd="30dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/title_sub"
                    android:text="@string/congratulation"
                     android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt1"

                    android:gravity="center"
                    android:text="We are continuously trying hard to give our users satisfaction and trust."
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt2"

                     android:gravity="center|top"
                    android:text=" We really appreciate it if you can star_rate us five stars!" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btnRate"
                     android:layout_centerHorizontal="true"
                    android:id="@+id/mLinearStar"

                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"

                        android:scaleType="fitXY"
                        android:src="@drawable/star_rate"
                        android:tint="@null" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_rate"
                        android:tint="@null" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"

                        android:scaleType="fitXY"
                        android:src="@drawable/star_rate"
                        android:tint="@null" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"

                        android:scaleType="fitXY"
                        android:src="@drawable/star_rate"
                        android:tint="@null" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_rate"
                        android:tint="@null" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRate"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
android:background="@drawable/gradient_bg_btn_rate"
                    android:textColor="@color/white"
                    android:text="@string/rate_us_5_stars"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/like"
        android:rotation="-5" />

</FrameLayout>